[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    notebooks

# Complexity
max-complexity = 10

# Docstring conventions
docstring-convention = google

# Per file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:S101
